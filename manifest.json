{
  "manifest_version": 3,
  "name": "Auto Scroller",
  "description": "Automatically scrolls manwha pages",
  "version": "1.0",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "icons": {
    "128": "images/scroll-icon.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/scroll-icon.png"
  }
}